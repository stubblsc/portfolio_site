<div class="col-md-12">
	<div class="col-md-1"></div>
	<% if not @home.nil? %>
		<div class = "col-md-10 jumbotron background" %>
			<div class="col-md-12 text">
				<h1><%= @home.header %></h1>
			</div>
			<br><br>
			<div class="col-md-10">
				<div class="col-md-2"></div>
				<div class="col-md-10 text">
					<h4><%= @home.text %></h4>
				</div>
			</div>
		</div>
		<style>
			.background{
    			position:relative;
			}
			.background:after{
			    content:'';
			    background:url('<%= @home.background.url %>') no-repeat;
			    background-size:100%;
			    width:100%;
			    height:100%;
			    position:absolute;
			    top:0;
			    left:0;
			    opacity:0.2;
			}
			.text{
			    position:relative;
			    z-index:1;
			}
		</style>
	<% else %>
		<div class="col-md-10 jumbotron">
			<div class="col-md-12">
				<h1><%= @home.header %></h1>
			</div>
			<br><br>
			<div class="col-md-10">
				<div class="col-md-2"></div>
				<div class="col-md-10">
					<h4><%= @home.text %></h4>
				</div>
			</div>
		</div>
	<% end %>
</div>
